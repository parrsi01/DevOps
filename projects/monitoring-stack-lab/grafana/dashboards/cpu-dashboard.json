      "id": 2,
      "options": {"legend": {"displayMode": "table", "placement": "bottom"}, "tooltip": {"mode": "multi"}},
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",container_label_com_docker_compose_service=\"app\",image!=\"\"}[1m])) or sum(rate(container_cpu_usage_seconds_total{job=\"cadvisor\",name=~\".*mon-app.*\",image!=\"\"}[1m]))",
