{
  "annotations": {"list": []},
  "editable": false,
  "graphTooltip": 0,
  "panels": [
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "reqps"}, "overrides": []},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
      "id": 1,
      "options": {"legend": {"displayMode": "table", "placement": "bottom"}, "tooltip": {"mode": "multi"}},
      "targets": [
        {
          "expr": "sum(rate(app_http_requests_total{status=~\"5..\"}[1m]))",
          "legendFormat": "5xx req/s",
          "refId": "A"
        }
      ],
      "title": "5xx Error Rate",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "prometheus", "uid": "prometheus"},
      "fieldConfig": {"defaults": {"unit": "percent"}, "overrides": []},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 0},
      "id": 2,
      "options": {"legend": {"displayMode": "table", "placement": "bottom"}, "tooltip": {"mode": "multi"}},
      "targets": [
        {
          "expr": "100 * sum(rate(app_http_requests_total{status=~\"5..\",route!=\"/metrics\"}[5m])) / clamp_min(sum(rate(app_http_requests_total{route!=\"/metrics\"}[5m])), 0.001)",
          "legendFormat": "error %",
          "refId": "A"
        }
      ],
      "title": "Error Percentage (5m)",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "loki", "uid": "loki"},
      "fieldConfig": {"defaults": {"unit": "short"}, "overrides": []},
      "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
      "id": 3,
      "options": {"legend": {"displayMode": "table", "placement": "bottom"}, "tooltip": {"mode": "multi"}},
      "targets": [
        {
          "expr": "sum(count_over_time({job=\"app\"} |= \"ANOMALY\" [1m]))",
          "legendFormat": "anomaly logs/min",
          "refId": "A"
        }
      ],
      "title": "Log Anomaly Rate (Loki)",
      "type": "timeseries"
    },
    {
      "datasource": {"type": "loki", "uid": "loki"},
      "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
      "id": 4,
      "options": {
        "dedupStrategy": "none",
        "enableLogDetails": true,
        "prettifyLogMessage": false,
        "showCommonLabels": false,
        "showLabels": true,
        "showTime": true,
        "sortOrder": "Descending",
        "wrapLogMessage": true
      },
      "targets": [
        {
          "expr": "{job=\"app\"} |= \"ANOMALY\"",
          "queryType": "range",
          "refId": "A"
        }
      ],
      "title": "Anomaly Logs",
      "type": "logs"
    }
  ],
  "schemaVersion": 39,
  "style": "dark",
  "tags": ["monitoring-lab", "errors", "logs"],
  "templating": {"list": []},
  "time": {"from": "now-15m", "to": "now"},
  "title": "Error Rate Dashboard",
  "uid": "lab-errors",
  "version": 1
}
